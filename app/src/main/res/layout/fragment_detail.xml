<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.myapp.pavilion.udacityoverview.DetailActivity$PlaceholderFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"


        android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:background="@color/udacity_lightblue"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"

            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:gravity="center_vertical"
                android:text="GENERAL"
                android:textSize="16dp"

                android:textColor="@color/udacity_black" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="2dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="5"
            android:orientation="vertical"

            >
            <View
                android:layout_width="match_parent"
                android:layout_height="3.5dp"
                android:gravity="center_horizontal"
                android:background="@android:color/darker_gray" />


            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:textColor="#000000"
                android:text="@string/hello_world" />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_gravity="center"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/tv_key"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:layout_margin="5dp"

                android:text="@string/hello_world" />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_gravity="center"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/tv_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#000"
                android:layout_marginTop="10dp"
                android:text="@string/hello_world"

                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/udacity_lightblue"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="SUMMARY"
                android:textSize="16dp"
                android:textColor="@color/udacity_black"


                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="2dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="5"
            android:orientation="vertical">


            <View
                android:layout_width="match_parent"
                android:layout_height="3.5dp"
                android:gravity="center_horizontal"
                android:background="@android:color/darker_gray" />
            <TextView
                android:id="@+id/tv_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:text="@string/hello_world"
                android:padding="10dp"
                android:textColor="#000000"
                android:gravity="center_vertical"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/udacity_lightblue"
            android:orientation="vertical"
            android:gravity="center"
android:layout_weight="1"            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"

                android:text="URLs"
                android:textSize="16dp"


                android:textColor="@color/udacity_black" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="2dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="5"
            android:orientation="vertical"


            >
            <View
                android:layout_width="match_parent"
                android:layout_height="3.5dp"
                android:gravity="center_horizontal"
                android:background="@android:color/darker_gray" />


            <TextView
                android:id="@+id/tv_youtube"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/udacity_black"
                android:text="@string/hello_world"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_youtube_url"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
android:textColor="#000"
                android:layout_marginTop="20dp"
                android:text="@string/hello_world"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/tv_homepage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="20dp"
                android:text="HomePage URL :"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_homepage_url"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:layout_marginTop="10dp"
                android:textAlignment="center" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>






